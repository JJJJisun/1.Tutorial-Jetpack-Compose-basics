<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FirstCompose" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- 상태바 색상 변경(themes.xml) -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- 상태바 아이콘 색상 변경 -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="Theme.FirstCompose.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FirstCompose.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FirstCompose.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>